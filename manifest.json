{
    "name": "Surfify",
    "description": "Music catered to your site choices.",
    "version": "1.0",
    "icons": { "128": "icon.png" },
    "manifest_version": 2,
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Play music by surfing!",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],

    "permissions": ["activeTab", "http://*/*", "https://*/*"]
}
