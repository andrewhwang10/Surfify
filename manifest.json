{
    "name": "Surfify",
    "description": "Music catered to your site choices.",
    "version": "1.0",
    "manifest_version": 2,

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["http://*/*"],
        "js": ["content.js"]
    }],

    "browser_action": {
        "default_title": "Play music by surfing!",
        "default_popup": "popup.html"
    },

    "icons": {"128": "128.png" },
    "permissions": ["http://*/*", "https://*/*"]
}
